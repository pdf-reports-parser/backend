root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 99
trim_trailing_whitespace = true # - no in pycharm
tab_width = 4 # - no in default

# [*.csv] # - no in default
# max_line_length = 2147483647 # - no in default

# [{*.bash,*.sh,*.zsh}] # - no in default
# indent_size = 2
# tab_width = 2

[{*.har,*.json}]
indent_size = 2

[{*.yaml,*.yml}]
indent_size = 2
indent_style = space # - no in pycharm

[Makefile] # - no in pycharm
indent_style = tab # - no in pycharm

[*.conf] # - no in pycharm
indent_size = 2 # - no in pycharm